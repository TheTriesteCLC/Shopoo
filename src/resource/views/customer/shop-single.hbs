{{!-- JQUERY --}}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
<div class="page-heading bg-light">
  <div class="container">
    <div class="row align-items-end text-center">
      <div class="col-lg-7 mx-auto">
        <h1>Shop</h1>  
        <p class="mb-4"><a href="/customer/home">Home</a> / <strong>Shop</strong></p>        
      </div>
    </div>
  </div>
</div>

<div class="untree_co-section pt-3">
  <div class="container">

    <div class="row align-items-center mb-5">
      <div class="col-lg-8">
        <h2 class="mb-3 mb-lg-0">{{title}}</h2>
      </div>
      <div class="col-lg-4">

        <div class="d-flex pt-4 align-items-center justify-content-lg-end">
          <div class="dropdown bg-transparent">
              <button class="btn btn-secondary dropdown-toggle bg-transparent text-dark" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Price
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/customer/shop-single/price-asc">Ascending</a>
                <a class="dropdown-item" href="/customer/shop-single/price-dec">Decending</a>
                <a class="dropdown-item" href="/customer/shop-single/price-50">Under $50</a>
                <a class="dropdown-item" href="/customer/shop-single/price-100">Under $100</a>
                <a class="dropdown-item" href="/customer/shop-single/price-300">Under $300</a>
              </div>
            </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <ul class="list-unstyled categories">
          <li><a href="/customer/shop-single/">All <span></span></a></li>
          <li><a href="/customer/shop-single/outer">Outerwear <span></span></a></li>
          <li><a href="/customer/shop-single/top">Top <span></span></a></li>
          <li><a href="/customer/shop-single/bottom">Bottom <span></span></a></li>
          <li><a href="/customer/shop-single/accessories">Accessories <span></span></a></li>
          <li><a href="/customer/shop-single/shoes">Shoes <span></span></a></li>
          <li>
            <div class="dropdown bg-transparent">
              <button class="btn btn-secondary dropdown-toggle bg-transparent text-dark" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                From
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                {{#each countries}}
                  <a href="/customer/shop-single/from?country={{this}}" class="dropdown-item">{{this}}</a>
                {{/each}}
              </div>
            </div>
          </li>
          <li>
            <div class="dropdown bg-transparent">
              <button class="btn btn-secondary dropdown-toggle bg-transparent text-dark" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Year
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                {{#each dates}}
                  <a href="/customer/shop-single/collection?date={{this}}" class="dropdown-item">{{this}}</a>
                {{/each}}
              </div>
            </div>
          </li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class ="template-test"></div>
        <div class="row main-content" id ="products">
          {{!-- LOADDED DATA --}}
          
          {{!-- <button class="btn btn-secondary dropdown-toggle bg-transparent text-dark" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                From
              </button> --}}
        </div>
        <ul class="pagination justify-content-center">
          <li class="page-link" value = "1" >1</li>
          <li class="page-link" value = "2" >2</li>
          <li class="page-link" value = "3" >3</li>
        </ul>
      </div>
    </div>
  </div> 
</div>

<script type="text/x-handlebars-template" id = "product-holder">
  \{{#each products}} 
    <div class="col-6 col-sm-6 col-md-6 mb-4 col-lg-4">
      <div class="product-item">
        <a href="/customer/shop-single/product/\{{'slug'}}" class="product-img">
          <div class="label new top-right">
            <div class='content'>New</div>
          </div>
          <img src="/images/products/\{{image}}" alt="Image" class="img-fluid">
        </a>
        <h3 class="title">
          <a href="/customer/shop-single/product/\{{slug}}">          
            \{{name}}
          </a>
        </h3>
        <div class="price">
          <span>$ \{{price}}</span>
        </div>
      </div>
    </div>
  \{{/each}}
</script>
<script>
  $(document).ready(function(){
    $.ajax({
      type: "GET",
      url: document.URL + '/?page=1',
      success: function(response){
        var template = document.getElementById("product-holder").innerHTML;
        
        var compiledTemplate = Handlebars.compile(template);
        var context = {
            products : response[0].products,        
        };
        var result = compiledTemplate(context);
        $("#products").html(result);            
      },
      error: function(err){
        console.log(err);
        alert('Failed');
      }
    });    
  });
</script>
<script>
    $('.page-link').on('click', function(e){
        var page = this.getAttribute("value");
        e.preventDefault(); // stop element default action
        $.ajax({
          type: "GET",
          url: document.URL + '/?page=' + page,
          success: function(response){
            var template = $("#product-holder").html();
            //console.log(template);            
            var compiledTemplate = Handlebars.compile(template);
            var context = {
                products : response[0].products,        
            };
            var result = compiledTemplate(context);
            //console.log(result);
            $("#products").html(result);             
            
          },
          error: function(err){
            console.log(err);
            alert('Failed');
          }
        });
    });
</script>
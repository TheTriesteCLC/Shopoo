  <div class="mt-5">
    <div class="row justify-content-center align-items-center h-100 pt-5">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Forgot password</h3>
            <form method="POST" action="/customer/forgot-success">
              <div class="row">
                <div class="col-md-12 mb-4">

                  <div class="form-outline">
                    <input type="username" id="username" class="form-control form-control-lg" name="username" placeholder="Enter your username"/>
                    <label class="form-label" for="username">Username</label>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-12 mb-4">

                  <div class="form-outline">
                    <input type="email" id="email" class="form-control form-control-lg" name="email" placeholder="Enter your email"/>
                    <label class="form-label" for="email">Email</label>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-12 mb-4">

                  <div class="form-outline">
                    <input type="password" id="newPassword" class="form-control form-control-lg" name="newPassword" placeholder="Enter new password"/>
                    <label class="form-label" for="newPassword">New password</label>
                    <div>
                      <input type="checkbox" onclick="passwordToggle('newPassword')">Show Password
                    </div>
                  </div>

                </div>
              </div>
              <div class="row">
                <div class="col-md-12 mb-4">

                  <div class="form-outline">
                    <input type="password" id="againPassword" class="form-control form-control-lg" name="againPassword" placeholder="Enter new password"/>
                    <label class="form-label" for="againPassword">Enter new password again</label>
                    <div>
                      <input type="checkbox" onclick="passwordToggle('againPassword')">Show Password
                    </div>
                  </div>

                </div>
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-primary">Change password</button>
                <p class="mt-2">Please check your new password again.</p>
              </div>

              <div class="text-center mt-5">
                <p>Already have an account? <a href="/customer/login">Login</a></p>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
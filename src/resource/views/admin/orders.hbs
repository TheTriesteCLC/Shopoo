                          <span class="text-secondary text-xs font-weight-bold">{{this.note}}</span>
                        </td>
                        <td class="text-center">
                          <span class="text-secondary text-xs font-weight-bold">{{this.promo}}</span>
                        </td>
                        <td class="text-center">
                          <span class="text-secondary text-xs font-weight-bold">{{this.status}}</span>
                        </td>
                        <td class="text-center">
                          <form method="POST" action="/admin/tables/product/order/update/{{this.slug}}">
                            <div class="form-group mb-3">
                              <select id="status" class="form-select" name="status" required>
                                <option value="Pending">Pending</option> 
                                <option value="Shipping">Shipping</option>  
                                <option value="Done">Done</option>    
                              </select>
                            </div>
                            <button class="btn btn-black btn-sm bg-gradient-success" type="submit">
                              Update status
                            </button>
                          </form>
                        </td>
                      </tr>
                    {{/each}}
                </tbody>

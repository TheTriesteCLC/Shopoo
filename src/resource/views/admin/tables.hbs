<script>
  var userPage = 1;
  var productPage = 1;
  var userCondition ='';
  var userSortBy ='';
  var prodCondition ='';
  var prodSortBy ='';

  $(document).ready(function(){

    $.ajax({
      type: "GET",
      url: document.URL + '/?getall=users&page=1' ,
      success: function(response){
        //alert('Start users');
        handleResponseUsers(response);
      },
      error: function(err){
        console.log(err);
        //alert('Failed1 users');
      }
    });    

    $.ajax({
      type: "GET",
      url: document.URL + '/?getall=products&page=1',
      success: function(response){
        //alert('Start products');
        handleResponseProducts(response);
      },
      error: function(err){
        console.log(err);
        //alert('Failed1 products');
      }
    });  
  });
  
</script>
<script>
  $('.users-filter, .products-filter').on('click', function(e){
    e.preventDefault();
    var getItems;
    if (this.getAttribute('class').indexOf('users-filter') > 0) {
      getItems = 'users';
    } else {
      getItems = 'products';
    }

    var value = this.getAttribute('value');
    var field = this.getAttribute('name');
    var type = this.getAttribute('type');
    var thisPage = 1;
    var thisCondition = '';
    var thisSortBy = '';

    // Page
    if (getItems == 'users'){
      userPage = thisPage;
    } else {
      productPage = thisPage;
    }
    
    // Condition
    if (type == 'filter'){
      if (value =='none') {
        thisCondition = '';
      } else{
        thisCondition = '&condition={"' + field +'":"'+ value +'"}';
      }

      // update
      if (getItems == 'users'){
        userCondition = thisCondition;
        thisSortBy = userSortBy;
      } else {
        prodCondition = thisCondition;
        thisSortBy = prodSortBy;
      }
    }

    // SortBy
    if (type == 'sorter'){
      thisSortBy = '&sortBy={"' + field +'":'+ value +'}';

      // update
      if (getItems == 'users'){
        userSortBy = thisSortBy;
        thisCondition = userCondition;
      } else {
        prodSortBy = thisSortBy;
        thisCondition = prodCondition;
      }
    }

    $.ajax({
      type: "GET",
      url: document.URL + '/?getall=' + getItems + '&page=' + thisPage + thisCondition + thisSortBy,
      success: function(response){
        console.log(response);
        if (getItems == 'users'){
          handleResponseUsers(response);
        } else handleResponseProducts(response);     

      },
      error: function(err){
        console.log(err);
        //alert('Failed2');
      }
    });    
  });
</script>
<script>

  $('.next').on('click', function(e){
    e.preventDefault();
    var page;
    var value = this.getAttribute("value") ;
    var thisCondition = '';
    var thisSortBy = '';

    if (value === "users"){
      page = userPage + 1;
      thisCondition = userCondition;
      thisSortBy = userSortBy;
    } else {
      page = productPage + 1;
      thisCondition = prodCondition;
      thisSortBy = prodSortBy;
    }

    $.ajax({
      type: "GET",
      url: document.URL + '?getall=' + value + '&page=' + page + thisCondition + thisSortBy,
      success: function(response){
        console.log(response);
        if (value === "users"){
          handleResponseUsers(response);
        } else {
          handleResponseProducts(response);
        }
      },
      error: function(err){
        console.log(err);
        alert('Failed');
      }
    });   
  });

  $('.prev').on('click', function(e){
    e.preventDefault();
    var page;
    var value = this.getAttribute("value") ;
    var thisCondition = '';
    var thisSortBy = '';

    if (value === "users"){
      page = userPage;
      if (page > 1) {
        page = page - 1;
      }
      thisCondition = userCondition;
      thisSortBy = userSortBy;
    } else {
      page = productPage;
      if (page > 1) {
        page = page - 1;
      }
      thisCondition = prodCondition;
      thisSortBy = prodSortBy;
    }

    $.ajax({
      type: "GET",
      url: document.URL + '?getall=' + value + '&page=' + page + thisCondition + thisSortBy,
      success: function(response){
        //alert('Start users');
        if (value === "users"){
          handleResponseUsers(response);
        } else {
          handleResponseProducts(response);
        }
      },
      error: function(err){
        console.log(err);
        //alert('Failed1 users');
      }
    });    
  });

</script>
<script>

  function handleResponseUsers(response){
    //console.log(response);
    var users = response.users;
    var context = {
        users: users,
        titleUsers: response.titleUsers      
    };   
    loadTemplate("users-holder", context, "users-list");
    loadTemplate("titleUsers-holder", context, "users-title");

    document.getElementById("user-prev").disabled = false;
    if (response.pagingFlag === -1 || response.pagingFlag === 2){
      //alert('disable prev');
      document.getElementById("user-prev").disabled = true;
    }

    document.getElementById("user-next").disabled = false;
    if (response.pagingFlag === 1 || response.pagingFlag === 2){
      //alert('disable next')
      document.getElementById("user-next").disabled = true;
    }

    userPage = response.page;
    
    var context = {
        page: response.page
    };   
    loadTemplate("paging-holder", context, "user-paging");
  }

  function handleResponseProducts(response){
    var context = {
        products: response.products,
        titleProducts: response.titleProducts      
    };
    loadTemplate("products-holder", context, "products-list");
    loadTemplate("titleProducts-holder", context, "products-title");

    document.getElementById("product-prev").disabled = false;
    if (response.pagingFlag === -1 || response.pagingFlag === 2){
      //alert('disable prev');
      document.getElementById("product-prev").disabled = true;
    }

    document.getElementById("product-next").disabled = false;
    if (response.pagingFlag === 1 || response.pagingFlag === 2){
      //alert('disable next')
      document.getElementById("product-next").disabled = true;
    }
    productPage = response.page;
    
    var context = {
        page: response.page
    };   
    loadTemplate("paging-holder", context, "product-paging");
  }

  function loadTemplate(templateid, context, targetid){
    var template = document.getElementById(templateid).innerHTML;
    var compiledTemplate = Handlebars.compile(template);
    var result = compiledTemplate(context);
    document.getElementById(targetid).innerHTML = result;
    //alert('Loaded' + " " + targetid);
  }
</script>